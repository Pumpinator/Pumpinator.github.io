---
import Layout from "../layouts/Layout.astro";

import Section from "../components/Section.astro";
import Card from "../components/Card.astro";
import Badge from "../components/Badge.astro";
import SocialPill from "../components/SocialPill.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";

import TypeScriptIcon from "../icons/TypeScript.astro";
import SpringIcon from "../icons/Spring.astro";
import PythonIcon from "../icons/Python.astro";
import PHPIcon from "../icons/PHP.astro";
import MySQLIcon from "../icons/MySQL.astro";
import JavaScriptIcon from "../icons/JavaScript.astro";
import JavaIcon from "../icons/Java.astro";
import HTMLIcon from "../icons/HTML.astro";
import GitIcon from "../icons/Git.astro";
import DockerIcon from "../icons/Docker.astro";
import CSSIcon from "../icons/CSS.astro";
import ArduinoIcon from "../icons/Arduino.astro";
import AppleIcon from "../icons/Apple.astro";
import AndroidIcon from "../icons/Android.astro";
import NodejsIcon from "../icons/Nodejs.astro";
import JakartaIcon from "../icons/Jakarta.astro";
import LinuxIcon from "../icons/Linux.astro";
import ExpressIcon from "../icons/Express.astro";
import BootstrapIcon from "../icons/Bootstrap.astro";
import VueIcon from "../icons/Vue.astro";
import MongoIcon from "../icons/Mongo.astro";
import TailwindIcon from "../icons/Tailwind.astro";
import WindowsIcon from "../icons/Windows.astro";
import JavaFXIcon from "../icons/JavaFX.astro";
---

<Layout
title="Portafolio de Alejandro Delgado Cardona - Desarrollador e Ingeniero de Software"
  description="Bienvenido al portafolio de Alejandro Delgado Cardona. Como desarrollador e ingeniero de software experimentado, Alejandro tiene una amplia gama de habilidades en tecnologías como Java, Python, Node.js y más. Explora sus proyectos, conoce su experiencia y descubre cómo puede ayudar a llevar tu proyecto al siguiente nivel."
>
<main class="px-4">
  <Section id="about" class="py-44 pb-24">
      <img
        class="rounded-full size-[24vh] mb-4"
        src="https://avatars.githubusercontent.com/u/136514743?s=400&u=07348fcbfcd0ea6bbe3d3ab3e4fddbf4f6cadac5&v=4"
        alt="Alejandro foto"
      />
      <h1
        class="text-3xl md:text-4xl lg:text-5xl font-bold flex justify-center flex-row gap-x-2 pb-6 lg:pb-10 uppercase"
      >
        Hola, soy Alejandro Delgado Cardona!

        <div class="flex justify-center items-center text-center">
          <Badge> Desarrollador Fullstack 🚀</Badge>
        </div>
      </h1>

      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span>+ 2 años de experiencia.</span> Tengo 20 años y soy estudiante de
        <span class="text-yellow-300/90 uppercase"
          >Ingeniería de Desarrollo de Software</span
        > en la
        <span class="text-green-300/90 uppercase"
          >Universidad Tecnológica de León 💚🦁.</span
        >
        Me especializo en el desarollo de soluciones tecnológicas utilizando tecnologías
        para el
        <span class="text-purple-300/90 uppercase">desarrollo web y móvil</span>
        💻⚙️. Me encanta aprender y compartir conocimiento.
      </h2>

      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/alejandrodcardona5/">
          <i class="fa-brands fa-linkedin size:4 md:size-6"></i>
          LinkedIn
        </SocialPill>

        <SocialPill href="https://github.com/Pumpinator">
          <i class="fa-brands fa-square-github size:4 md:size-6"></i>
          GitHub
        </SocialPill>

        <SocialPill href="https://www.instagram.com/alejandroel5/">
          <i class="fa-brands fa-square-instagram size:4 md:size-6"></i>
          Instagram
        </SocialPill>

        <SocialPill href='mailto:"alejandrodcardona5@gmail.com"'>
          <i class="fa-solid fa-square-envelope size:4 md:size-6"></i>
          alejandrodcardona5@gmail.com
        </SocialPill>
      </nav>
    </Section>

    <Section id="experiencie" class="pt-10 pb-10">
      <h2 class="text-2xl font-semibold mb-6">
        <i class="fa-solid fa-suitcase"></i>
        Experiencia
      </h2>
      <Experience />
    </Section>

    <Section id="skills" class="pt-10">
      <h2 class="text-2xl font-semibold gap-x-3">
        <i class="fa-solid fa-code"></i>
        Habilidades
      </h2>
      <div class="grid grid-cols-4 gap-4 justify-items-center pt-10">
        <JavaIcon class="size-20" />
        <PythonIcon class="size-20" />
        <PHPIcon class="size-20" />
        <ArduinoIcon class="size-20" />
        <JakartaIcon class="size-20" />
        <SpringIcon class="size-20" />
        <MySQLIcon class="size-20" />
        <MongoIcon class="size-20" />
        <NodejsIcon class="size-20" />
        <ExpressIcon class="size-20" />
        <GitIcon class="size-20" />
        <DockerIcon class="size-20" />
        <HTMLIcon class="size-20" />
        <CSSIcon class="size-20" />
        <JavaScriptIcon class="size-20" />
        <TypeScriptIcon class="size-20" />
        <JavaFXIcon class="size-20" />
        <VueIcon class="size-20" />
        <BootstrapIcon class="size-20" />
        <TailwindIcon class="size-20" />
        <AndroidIcon class="size-20" />
        <LinuxIcon class="size-20" />
        <AppleIcon class="size-20" />
        <WindowsIcon class="size-20" />
      </div>
    </Section>
    <Section id="projects" class="pt-10">
      <h2 class="text-2xl font-semibold gap-x-3">
        <i class="fa-solid fa-gear"></i>
        Proyectos
      </h2>
      <Projects />
    </Section>
  </main>
</Layout>
